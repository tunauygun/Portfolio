---
import HeroSection from '@/components/HeroSection.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import { ModeToggle } from '@/components/ModeToggle';
import { Separator } from "@/components/ui/separator"
import ExperienceSection from '@/components/ExperienceSection';

import { name, title, description, socials, experience, education, projects } from '../data/portfolio.json';
import EducationSection from '@/components/EducationSection';
import ColorDemo from '@/components/ColorDemo.astro';
import Projects from '@/components/Projects.astro';

---

<BaseLayout>
	<HeroSection name={name} title={title} description={description} socials={socials} />
	<Separator className='mx-auto max-w-5/6 my-8'/>
	<ExperienceSection experiences={experience}/>
	<Separator className='mx-auto max-w-5/6 my-8'/>
	<EducationSection educationList={education}/>
	<ModeToggle client:load />
	<Separator className='mx-auto max-w-5/6 my-8'/>
	<Projects projects={projects}/>
	<ColorDemo/>
</BaseLayout>
	
	
<script is:inline>
	const getThemePreference = () => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
			return localStorage.getItem('theme');
		}
		return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
	};
	const isDark = getThemePreference() === 'dark';
	document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
 
	if (typeof localStorage !== 'undefined') {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains('dark');
			localStorage.setItem('theme', isDark ? 'dark' : 'light');
		});
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	}
</script>
